<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opentriviaquizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDark">
        <activity android:name=".hub.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".quizconfig.ChooseCategoryActivity" />
        <activity android:name=".quizconfig.ChooseDifficultyActivity" />
        <activity android:name=".quiz.TrueFalseQuizActivity" />
        <activity android:name=".quiz.MultipleQuizActivity" />
        <activity android:name=".quiz.solutions.ViewSolutionsActivity" />
        <activity android:name=".userprofile.UserProfileActivity" />
        <activity android:name=".hub.HomeActivity" />
    </application>

</manifest>